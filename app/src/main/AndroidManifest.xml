<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.movierecorder">

    <application
        android:allowBackup="true"
        android:icon="@drawable/movie1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InsertMovieActivity" />
        <activity android:name=".EditMovieActivity" />
        <activity android:name=".DeleteMovieActivity" />
        <activity android:name=".ShowAllMoviesActivity" />
        <activity android:name=".ShowTopMoviesActivity" />
        <activity android:name=".ShowBottomMoviesActivity" />
        <activity android:name=".SecondEditMovieActivity" />
        <activity android:name=".AboutActivity"></activity>
    </application>

</manifest>